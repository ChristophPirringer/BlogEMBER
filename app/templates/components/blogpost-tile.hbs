{{yield}}

<div class="col-md-4">
  <div class="jumbotron post-jumbotron" style="background:url('{{blogpost.picture}}') no-repeat center center">

    <div class="segment">
      <h3>{{#link-to 'blogpost' blogpost.id}}{{blogpost.title}}{{/link-to}}</h3>
    </div>

    <div class="segment">
      <h5> by: <em>{{blogpost.author}}</em></h5>
      <h5>last updated: <em>{{blogpost.date}}</em></h5>
    </div>

    <div class="segment">
      {{update-blogpost blogpost=blogpost update="update"}}
      <span title="delete" {{action 'delete' blogpost}} class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span>

    </div>

  </div>
</div>
