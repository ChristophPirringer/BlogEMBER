{{yield}}


{{#if updateBlogpostForm}}
  <h4>Update {{blogpost.author}}'s {{blogpost.title}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=blogpost.author}}
        </div>
        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date id="date" placeholder=blogpost.date}}
        </div>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=blogpost.title}}
        </div>
        <div class="form-group">
          <label for="tag">Tag</label>
          {{input value=tag id="tag" placeholder=blogpost.tag}}
        </div>
        <div class="form-group">
          <label for="content">Content</label>
          {{input value=content id="content" placeholder=blogpost.content}}
        </div>
        <div class="form-group">
          <label for="picture">Picture URL</label>
          {{input value=picture id="picture" placeholder=blogpost.picture}}
        </div>

        <button class="btn btn-primary" {{action 'update' blogpost}}>Save</button>
      </form>
    </div>
{{else}}
    <button class="btn btn-primary update-button" {{action 'updateBlogpostForm'}}>Update</button>
{{/if}}
